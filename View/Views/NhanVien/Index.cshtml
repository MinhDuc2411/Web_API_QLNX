@model IEnumerable<DATA_DuAn.DTO.NhanVienDto.NhanVienDTO>

@{
    ViewData["Title"] = "Danh sách Nhân Viên";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="mb-3 d-flex justify-content-between">
        <a href="@Url.Action("Create", "NhanVien")" class="btn btn-success">Thêm Nhân Viên</a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().MaNV)</th>
                <th>@Html.DisplayNameFor(model => model.First().TenNV)</th>
                <th>@Html.DisplayNameFor(model => model.First().ChucVu)</th>
                <th>@Html.DisplayNameFor(model => model.First().SoDT)</th>
                <th>@Html.DisplayNameFor(model => model.First().Email)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="tableBody">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.MaNV)</td>
                    <td>@Html.DisplayFor(modelItem => item.TenNV)</td>
                    <td>@Html.DisplayFor(modelItem => item.ChucVu)</td>
                    <td>@Html.DisplayFor(modelItem => item.SoDT)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>
                        <a href="@Url.Action("Edit", "NhanVien", new { id = item.MaNV })" class="btn btn-primary btn-sm">Edit</a>
                        <a href="@Url.Action("Details", "NhanVien", new { id = item.MaNV })" class="btn btn-info btn-sm">Details</a>
                        <a href="@Url.Action("Delete", "NhanVien", new { id = item.MaNV })" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    function searchTable() {
        var input, filter, table, tr, td, i, txtValue;
        input = document.getElementById("searchInput");
        filter = input.value.toUpperCase();
        table = document.querySelector(".table");
        tr = table.getElementsByTagName("tr");
        for (i = 1; i < tr.length; i++) {
            tr[i].style.display = "none";
            td = tr[i].getElementsByTagName("td");
            for (var j = 0; j < td.length; j++) {
                if (td[j]) {
                    txtValue = td[j].textContent || td[j].innerText;
                    if (txtValue.toUpperCase().indexOf(filter) > -1) {
                        tr[i].style.display = "";
                        break;
                    }
                }
            }
        }
    }
</script>
