@model IEnumerable<DATA_DuAn.DTO.KhachHangDto.KhachHangDTO>

@{
    ViewBag.Title = "Danh sách khách hàng";
}

<h2 class="text-center mb-4">Danh sách khách hàng</h2>

<div class="container">
    <div class="row">
        <div class="col">
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="thead-dark">
                    <tr>
                        <th scope="col">CCCD</th>
                        <th scope="col">Tên khách hàng</th>
                        <th scope="col">Địa chỉ</th>
                        <th scope="col">Số điện thoại</th>
                        <th scope="col">Email</th>
                        <th scope="col"></th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Cccd)</td>
                            <td>@Html.DisplayFor(modelItem => item.TenKH)</td>
                            <td>@Html.DisplayFor(modelItem => item.DiaChi)</td>
                            <td>@Html.DisplayFor(modelItem => item.SoDT)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>
                                <a asp-controller="KhachHang" asp-action="Details" asp-route-id="@item.MaKH" class="btn btn-info btn-sm">Chi tiết</a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>