@model IEnumerable<DATA_DuAn.DTO.DanhMucXeDto.DanhMucXeDTO>

<div class="container mt-5">
    <h2 class="text-center mb-4">List of All Xe</h2>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <a class="btn btn-primary" asp-controller="DanhMucXe" asp-action="AddDanhMucXeDTO">
            <i class="bi bi-plus-lg"></i> Add New Xe
        </a>
        <form class="d-flex" asp-controller="DanhMucXe" asp-action="Index" method="GET">
            <div class="input-group">
                <select class="form-select" name="searchField">
                    <option value="MaXe">Mã Xe</option>
                    <!-- Add more search options if needed -->
                </select>
                <input type="text" class="form-control" name="searchValue" placeholder="Enter search value" />
                <button type="submit" class="btn btn-secondary">
                    <i class="bi bi-search"></i> Search
                </button>
            </div>
        </form>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>MaXe</th>
                    <th>BienSo</th>
                    <th>HangXe</th>
                    <th>MauSac</th>
                    <th>GiaThue</th>
                    <th>TrangThai</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MaXe</td>
                        <td>@item.BienSo</td>
                        <td>@item.HangXe</td>
                        <td>@item.MauSac</td>
                        <td>@item.GiaThue</td>
                        <td>@item.TrangThai</td>
                        <td>
                            <a class="btn btn-info btn-sm" asp-controller="DanhMucXe" asp-action="ListDanhMucXeDTO" asp-route-id="@item.MaXe">
                                <i class="bi bi-eye"></i> Detail
                            </a>
                            <a class="btn btn-warning btn-sm" asp-controller="DanhMucXe" asp-action="EditDanhMucXe" asp-route-id="@item.MaXe">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a class="btn btn-danger btn-sm" asp-controller="DanhMucXe" asp-action="DeleteDanhMucXe" asp-route-id="@item.MaXe">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        // Add any JavaScript/jQuery if necessary for additional interactivity
    </script>
}
