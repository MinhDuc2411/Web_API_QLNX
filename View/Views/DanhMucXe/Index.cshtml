@model IEnumerable<DATA_DuAn.DTO.DanhMucXeDto.DanhMucXeDTO>

<form asp-controller="DanhMucXe" asp-action="Index" method="GET" class="animal-search-form d-flex flex-wrap justify-content-between align-items-center mb-3">
    <div style="color:white" class="search-input-container col-md-6">
        <label for="filterQuery" class="form-label">Tìm kiếm:</label>
        <div class="input-group">
            <input type="text" name="filterQuery" id="filterQuerys" class="form-control" placeholder="Biển số">
            <button type="submit" class="btn btn-primary search-btn">Tìm kiếm</button>
        </div>
        <div class="input-group">
            <label class="lable lable-">Sắp xếp: &nbsp;</label>
            <div class="custom-control custom-radio custom-control-inline">
                <input type="radio" id="isAccessw" name="isAccess" value="False" checked class="custom-control-input">
                <label for="isAccess" class="custom-control-label">Tăng dần&nbsp;</label>
            </div>
            <div class="custom-control custom-radio custom-control-inline">
                <input type="radio" id="isAccessw" name="isAccess" value="True" class="custom-control-input">
                <label for="isAccess" class="custom-control-label">Giảm dần</label>
            </div>
        </div>
    </div>
    <a href="@Url.Action("Create", "Animal")" class="btn btn-success mt-2 add-animal-btn" target="_blank">Thêm xe mới</a>
</form>


@if (Model != null)
{
    <form asp-controller="DanhMucXe" asp-action="Index" method="GET" class="animal-search-form d-flex flex-wrap justify-content-between align-items-center mb-3">
        <table style="color:white" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th scope="col">Mã xe</th>
                    <th scope="col">BIển số</th>
                    <th scope="col">Hãng xe</th>
                    <th scope="col">Màu sắc</th>
                    <th scope="col">Giá thuê</th>
                    <th scope="col">Trạng thái</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="color:white">
                        <td>@item.MaXe</td>
                        <td>@item.BienSo</td>
                        <td>@item.HangXe</td>
                        <td>@item.MauSac</td>
                        <td>@item.GiaThue</td>
                        <td>@item.TrangThai</td>                      
                    </tr>
                }
            </tbody>
        </table>

    </form>
}
else
{
    <h1 style="color:white">Không có dữ liệu</h1>
}