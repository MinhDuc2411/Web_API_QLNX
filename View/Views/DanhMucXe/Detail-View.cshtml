@model DATA_DuAn.DTO.DanhMucXeDto.DanhMucXeDTO

@{
    ViewData["Title"] = "Create Vehicle";
}

<h2>Create Vehicle</h2>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="BienSo" class="control-label"></label>
        <input asp-for="BienSo" class="form-control" />
        <span asp-validation-for="BienSo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HangXe" class="control-label"></label>
        <input asp-for="HangXe" class="form-control" />
        <span asp-validation-for="HangXe" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MauSac" class="control-label"></label>
        <input asp-for="MauSac" class="form-control" />
        <span asp-validation-for="MauSac" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="GiaThue" class="control-label"></label>
        <input asp-for="GiaThue" class="form-control" />
        <span asp-validation-for="GiaThue" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TrangThai" class="control-label"></label>
        <input asp-for="TrangThai" class="form-control" />
        <span asp-validation-for="TrangThai" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a href="/DanhMucXe" class="btn btn-secondary">Cancel</a>
    </div>
</form>