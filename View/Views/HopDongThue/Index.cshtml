@model IEnumerable<DATA_DuAn.DTO.HopDongDto.HopDongThueDTO>

@{
    ViewData["Title"] = "Hợp Đồng Thuê";
}

<div class="container mt-4">
    <h1 class="display-4 text-center">@ViewData["Title"]</h1>

    <div class="d-flex justify-content-end mb-4">
        <a class="btn btn-primary" asp-action="Create">Create New</a>
    </div>

    <div class="list-group">
        @foreach (var item in Model)
        {
            <div class="list-group-item list-group-item-action flex-column align-items-start">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">Hợp Đồng: @Html.DisplayFor(modelItem => item.MaHopDong)</h5>
                    <small>Tình Trạng: @Html.DisplayFor(modelItem => item.TinhTrang)</small>
                </div>
                <p class="mb-1"><strong>Khách Hàng:</strong> @Html.DisplayFor(modelItem => item.MaKH)</p>
                <p class="mb-1"><strong>Xe:</strong> @Html.DisplayFor(modelItem => item.MaXe)</p>
                <p class="mb-1"><strong>Nhân Viên:</strong> @Html.DisplayFor(modelItem => item.MaNV)</p>
                <p class="mb-1"><strong>Ngày Bắt Đầu:</strong> @Html.DisplayFor(modelItem => item.NgayBatDau)</p>
                <p class="mb-1"><strong>Ngày Kết Thúc:</strong> @Html.DisplayFor(modelItem => item.NgayKetThuc)</p>
                <p class="mb-1"><strong>Tổng Tiền:</strong> @Html.DisplayFor(modelItem => item.TongTien)</p>
                <div class="mt-2">
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.MaHopDong">Details</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.MaHopDong">Delete</a>
                </div>
            </div>
        }
    </div>
</div>